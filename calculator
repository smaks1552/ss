package kalkulator;

import java.util.Scanner;

public class calc {
	public static void main(String[] args) {
		int num1;
		int num2;
		String operacja;
		
		Scanner input = new Scanner(System.in);
		
		System.out.println(" podaj liczbe pierwszą: ");
		num1 = input.nextInt();
		System.out.println(" podaj liczbe drugą");
		num2 = input.nextInt();	  
    	  
		Scanner op = new Scanner(System.in);
		
		System.out.println("jaka będzie operacja?");
		operacja = op.next();
		
		if (operacja == "+") {
			System.out.println("wynik to " (num1 + num2))
					
			
		}
	}
	}

